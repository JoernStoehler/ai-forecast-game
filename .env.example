# Cloudflare credentials (create token at dash.cloudflare.com/profile/api-tokens)
CLOUDFLARE_API_TOKEN=your_token_here
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# LLM Provider (choose one, set the corresponding API key)
# Options: anthropic, google, openai
LLM_PROVIDER=anthropic

# Anthropic (Claude) - recommended, best structured output
ANTHROPIC_API_KEY=sk-ant-...

# Google (Gemini) - alternative, has free tier
# GOOGLE_API_KEY=...

# OpenAI (GPT-4) - alternative
# OPENAI_API_KEY=sk-...
